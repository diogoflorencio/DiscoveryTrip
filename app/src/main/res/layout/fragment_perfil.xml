<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.discoverytrip.PerfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailVal_txt"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/email_txt"
            android:layout_alignBottom="@+id/perfil_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/nameVal_txt"
            android:layout_alignStart="@+id/nameVal_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameVal_txt"
            android:textSize="18sp"
            tools:layout_alignLeft="@+id/perfil_txt"
            android:layout_alignBaseline="@+id/name_txt"
            android:layout_alignBottom="@+id/name_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Nome:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perfil_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:id="@+id/name_txt"
            android:textSize="18sp"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:id="@+id/email_txt"
            android:textSize="18sp" />

        <TextView
            android:text="Perfil:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/perfil_txt"
            android:textSize="24sp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
