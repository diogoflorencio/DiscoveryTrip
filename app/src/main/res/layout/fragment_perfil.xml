<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.discoverytrip.Fragments.PerfilFragment">

    <TextView
        android:text="Perfil:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pfPerfil_txt"
        android:textSize="24sp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pfEmail_txt"
        android:textSize="18sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/pfName_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nome:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/pfName_txt"
        android:layout_below="@+id/pfPerfil_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pfNameVal_txt"
        android:layout_alignTop="@+id/pfName_txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pfEmailVal_txt"
        android:layout_alignTop="@+id/pfEmail_txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pfConfirm_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/pfPerfil_txt"
        android:layout_toStartOf="@+id/pfPerfil_txt" />


</RelativeLayout>
