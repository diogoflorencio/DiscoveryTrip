<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.diogo.discoverytrip.Activities.HomeActivity"
    tools:showIn="@layout/app_bar_home"
    android:id="@+id/content_home"
    android:background="@color/discoveryTrip_Background">
    <ViewFlipper
        android:id="@+id/home_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment class="com.example.diogo.discoverytrip.Fragments.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_home" />

        <fragment class="com.example.diogo.discoverytrip.Fragments.LocalizacaoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_localizacao" />

        <fragment class="com.example.diogo.discoverytrip.Fragments.PerfilFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_perfil" />

        <fragment class="com.example.diogo.discoverytrip.Fragments.PontoTuristicoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_ponto_turistico" />

        <fragment class="com.example.diogo.discoverytrip.Fragments.EventoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_evento" />
    </ViewFlipper>
</RelativeLayout>
