<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.diogo.discoverytrip.HomeActivity"
    tools:showIn="@layout/app_bar_home"
    android:id="@+id/content_home">

    <ViewFlipper
        android:id="@+id/home_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment class="com.example.diogo.discoverytrip.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_home" />

        <fragment class="com.example.diogo.discoverytrip.LocalizacaoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_localizacao" />

        <fragment class="com.example.diogo.discoverytrip.PerfilFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_perfil" />

        <fragment class="com.example.diogo.discoverytrip.PontoTuristicoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_ponto_turistico" />

        <fragment class="com.example.diogo.discoverytrip.EventoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_evento" />
    </ViewFlipper>
</RelativeLayout>
