<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/event_background"
    android:paddingBottom="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="7dp"
    tools:context="com.example.diogo.discoverytrip.Activities.DetalhesAtracaoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/detalhes_pt_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Título"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed" />

                <ImageView
                    android:id="@+id/detalhes_pt_imagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detalhes_pt_titulo"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/icon" />

                <EditText
                    android:id="@+id/detalhes_pt_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/detalhes_pt_imagem"
                    android:text="Descrição"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/detalhes_lbltipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/detalhes_pt_descricao"
                    android:inputType="textPersonName"
                    android:text="Categoria:"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/detalhes_tipo_categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detalhes_pt_descricao"
                    android:layout_toRightOf="@+id/detalhes_lbltipo"
                    android:inputType="textPersonName"
                    android:text="categoria"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/detalhes_lbltipo"
                    android:text="Início:"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/detalhes_pt_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editText9"
                    android:layout_alignBottom="@+id/editText9"
                    android:layout_toEndOf="@+id/editText9"
                    android:layout_toRightOf="@+id/editText9"
                    android:text="30/12/2017 23:59"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/editText10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editText9"
                    android:text="Fim:"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/editText11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detalhes_pt_startDate"
                    android:layout_toRightOf="@+id/editText9"
                    android:text="30/12/2017 23:59"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/editText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editText10"
                    android:text="Preço:"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <EditText
                    android:id="@+id/editText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/editText11"
                    android:layout_toRightOf="@+id/editText12"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <Button
                    android:id="@+id/detalhes_btn_lembrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/editText13"
                    android:layout_centerHorizontal="true"
                    android:background="@color/confirmebutton"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Marcar Presença"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
