<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.example.diogo.discoverytrip.Fragments.EventoCadastroFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Criação de eventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventCreation_txt"
                android:textSize="18sp"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="Nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventCreation_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/evName_txt"
                    android:textSize="18sp"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/evName_edt"
                    android:layout_alignTop="@+id/evName_txt"
                    android:layout_toLeftOf="@+id/evCancel_btn"
                    android:layout_toStartOf="@+id/evCancel_btn"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evDate_txt"
                    android:textSize="18sp"
                    android:layout_below="@+id/evName_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/evDate_edt"
                    android:layout_alignTop="@+id/evDate_txt"
                    android:layout_alignLeft="@+id/evName_edt"
                    android:layout_alignStart="@+id/evName_edt"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evKind_txt"
                    android:layout_centerVertical="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:textSize="18sp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/evKind_txt"
                    android:id="@+id/evKind_spn"
                    android:layout_alignLeft="@+id/evDate_edt"
                    android:layout_alignStart="@+id/evDate_edt" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Descrição"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evDesc_txt"
                    android:textSize="18sp"
                    android:layout_above="@+id/evConfirm_btn"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/evDesc_edt"
                    android:layout_alignTop="@+id/evDesc_txt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Preço"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/evKind_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/evPrice_txt"
                    android:textSize="18sp"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/evPrice_edt"
                    android:layout_alignTop="@+id/evPrice_txt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Confirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/evConfirm_btn"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="false"
                    android:layout_gravity="bottom" />

                <Button
                    android:text="Cancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/evCancel_btn"
                    android:layout_weight="1"
                    android:layout_gravity="bottom" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
